@model LoginProject.Common.ViewModels.UserLoginVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<style>
.msg{
  padding: 0px;
}


.err{
    color:red;
}
</style>


<form asp-action="Login" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-body">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Nazwa użytkownika</span>
                        <input type="text" asp-for="Username" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="Username"></span>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Hasło</span>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Hasło" aria-label="Password" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="Password"></span>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="msg">@TempData["msg"]</div>
                    }

                    <button type="submit" class="btn btn-success">Zaloguj</button>
                    <a class="text-alert" href="/UserAuthentication/Registration">Zarejestruj się</a>
                </div>
            </div>
        </div>
    </div>
</form>