@model LoginProject.Common.ViewModels.UserRegisterVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Registration" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-body">

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Imię</span>
                        <input type="text" asp-for="FirstName" class="form-control" placeholder="Imię" aria-label="FirstName" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="FirstName"></span>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Nazwisko</span>
                        <input type="text" asp-for="LastName" class="form-control" placeholder="Nazwisko" aria-label="LastName" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="LastName"></span>
                    </div>
                    
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Email</span>
                        <input type="text" asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="Email"></span>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Nazwa użytkownika</span>
                        <input type="text" asp-for="Username" class="form-control" placeholder="Nazwa użytkownika" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="Username"></span>
                    </div>
                    
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Hasło</span>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Hasło" aria-label="Password" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="Password"></span>
                    </div>
                    
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Potwierdź hasło</span>
                        <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="Potwierdź hasło" aria-label="PasswordConfirm" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="PasswordConfirm"></span>
                    </div>
                    
                    @if (TempData["msg"] != null)
                    {
                        <div class="msg">@TempData["msg"]</div>
                    }

                    <button type="submit" class="btn btn-success mb-3">Zarejestruj</button>
                    <a class="btn btn-primary" href="/UserAuthentication/Login">Logowanie</a>
                </div>
            </div>
        </div>
    </div>
</form>