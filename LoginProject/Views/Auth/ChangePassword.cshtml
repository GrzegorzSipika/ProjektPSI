@model LoginProject.Common.ViewModels.ChangePasswordVm

@{
    Layout = "_Layout";
}

<form asp-action="ChangePassword" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-body">
                    
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Aktualne hasło</span>
                        <input type="password" asp-for="CurrentPassword" class="form-control" placeholder="Aktualne hasło" aria-label="CurrentPassword" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="CurrentPassword"></span>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Nowe hasło</span>
                        <input type="password" asp-for="NewPassword" class="form-control" placeholder="Nowe hasło" aria-label="NewPassword" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="NewPassword"></span>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Potwierdź hasło</span>
                        <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="Potwierdź hasło" aria-label="PasswordConfirm" aria-describedby="basic-addon1">
                    </div>
                    <div class="msg">
                        <span class="err" asp-validation-for="PasswordConfirm"></span>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="msg">@TempData["msg"]</div>
                    }

                    <button type="submit" class="btn btn-success mb-3">Zapisz</button>
                </div>
            </div>
        </div>
    </div>
</form>